<% layout('layouts/boilerplate')%>

    <head>
        <link rel="stylesheet" href="/Home.css">
    </head>
    <% if(sites.length>0) { %>
        <div class="container d-flex justify-content-center align-items-center mt-5">
            <div id="carousel-image">
                <h2 style="text-align: center; color: skyblue; font-weight: bold;">All your campsites -
                    <%= sites.length %> -
                </h2>
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width: 100%; margin: 0 auto;">
                    <div class="carousel-inner">
                        <% sites.forEach((site, i)=> { %>
                            <div class="carousel-item <%=i===0 ? 'active' : '' %>">
                                <a href="/sites/<%=site._id%>"><img src="<%=site.images[0].url%>" class="card-img-top"></a>
                                <div class="carousel-caption">
                                    <strong>
                                        <h3 style="color:rgb(0, 0, 0); background-color: aliceblue; opacity: 0.8;"><%= site.title %></h3>
                                    </strong>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% if(sites.length> 1) {%>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        <% } %>
                </div>
            </div>
        </div>
        <% } else {%>
            <h1>No campsites currently</h1>
            <style>
                footer {}
            </style>
            <% } %>